<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Layout vertical bits vers Octets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <!--   Titre   -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bits to Bytes Converter"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp" />

        <!--   Barre de saisie   -->
        <EditText
            android:id="@+id/editTextBits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter bits"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonConvert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:gravity="center"
            android:layout_gravity="center"/>

        <!--   Résultat   -->
        <TextView
            android:id="@+id/textViewBytes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Layout vertical Octets vers bits -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <!--   Titre   -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bytes to Bits Converter"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp" />

        <!--   Barre de saisie   -->
        <EditText
            android:id="@+id/editTextBytes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter bits"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonConvert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:gravity="center"
            android:layout_gravity="center"/>

        <!--   Résultat   -->
        <TextView
            android:id="@+id/textViewBits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp" />
    </LinearLayout>




</LinearLayout>
