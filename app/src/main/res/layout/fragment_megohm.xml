<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir une mesure Ã  effectuer"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/textViewTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:weightSum="100">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_height="200dp"
            android:src="@drawable/megohm" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonFilTerre"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mesure fil - terre" />

            <Button
                android:id="@+id/buttonEntrefils"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Mesure Entre fils" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:layout_weight="70">

        <WebView
            android:id="@+id/webViewProcedure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearButtons"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_theme_background"
            android:gravity="center_horizontal"
            android:foregroundGravity="center"
            tools:ignore="WebViewLayout" />

        <LinearLayout
            android:id="@+id/linearButtons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <Button
                android:id="@+id/btnPreviousProcedure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_return"
                android:src="@drawable/arrow_return"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnNextProcedure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableRight="@drawable/arrow_continue"
                android:src="@drawable/arrow_continue"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
