<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.memo.MemoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/couleurscuivreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/convertisseur_icon"
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="10"
                android:src="@drawable/cable"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="@dimen/marging_left_icons"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTintColor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="80"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="Couleurs Cuivre"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/couleursfibreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/calcuator_icon"
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_marginLeft="@dimen/marging_left_icons"
                android:layout_marginRight="45dp"
                android:layout_weight="10"
                android:scaleType="fitCenter"
                android:src="@drawable/fibre"
                app:tint="?attr/iconTintColor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="80"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="Couleurs Fibre" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>