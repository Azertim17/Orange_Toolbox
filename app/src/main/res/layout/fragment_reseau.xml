<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reseau.ReseauFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/convertisseur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/convertisseur_icon"
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="10"
                android:src="@drawable/fleches"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="@dimen/marging_left_icons"
                android:scaleType="fitCenter"
                app:tint="?attr/iconTintColor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="80"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="Convertisseur octets"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/calculatricecidr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/calcuator_icon"
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_marginLeft="@dimen/marging_left_icons"
                android:layout_marginRight="45dp"
                android:layout_weight="10"
                android:scaleType="fitCenter"
                android:src="@drawable/calculatrice"
                app:tint="?attr/iconTintColor"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="80"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="Calculatrice CIDR"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cisco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_marginLeft="@dimen/marging_left_icons"
                android:layout_marginRight="45dp"
                android:layout_weight="10"
                android:scaleType="fitCenter"
                android:src="@drawable/cisco_logo"
                app:tint="?attr/iconTintColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="80"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="Commandes Routeur Cisco"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/oneaccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="45dp"
                android:layout_weight="17"
                android:scaleType="fitCenter"
                android:src="@drawable/oneaccess_logo"
                app:tint="?attr/iconTintColor" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/list_height"
                android:layout_weight="80"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="Commandes Routeur OneAccess"/>
        </LinearLayout>






    </LinearLayout>
</androidx.core.widget.NestedScrollView>